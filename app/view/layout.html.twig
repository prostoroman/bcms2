<!DOCTYPE html>
<html><head>
<title>{{ page.name_title }}</title>
<meta charset="UTF-8">
<meta name="description" content="" />
<script type="text/javascript" src="{{ rootUri }}/quickconcat.php?files=js/jquery.min.js,js/prettify.js,js/kickstart.js"></script>
<link rel="stylesheet" type="text/css" href="{{ rootUri }}/quickconcat.php?files=css/kickstart-buttons.css,css/kickstart-forms.css,css/kickstart-menus.css,css/kickstart-grid.css,css/kickstart-icons.css,css/jquery.fancybox-1.3.4.css,css/prettify.css,css/chosen.css,css/tiptip.css,css/kickstart.css,css/style.css" media="all" />

</head>
    <body>
	<a id="top-of-page"></a>
	<div id="wrap" class="clearfix">

	{% block menu %}
		<ul class="menu">
		    {% for m in bcms.MenuController.menu1 %}
			<li><a href="{{ bcms.app.urlFor('home') }}{{ m.name_url }}">{{ m.name_menu }}</a></li>
		    {% endfor %}
		</ul>		
	{% endblock %}
	 
<div class="col_12">
	<div class="col_9">

            {% block content %}
            {% endblock %}

	</div>
	
	<div class="col_3">
		{% block sidebar %}
			{% if user %}<h3>Hello, {{ user }}!</h3>{% endif %}
			<ul>
			<li class="current"><a href="{{ bcms.app.urlFor('home') }}">Home</a></li>
			<li><a href="{{ bcms.app.urlFor('login') }}">Login</a></li></li>
			<li><a href="{{ bcms.app.urlFor('logout') }}">Logout</a></li>
			<li><a href="{{ rootUri }}/private">Private page</a></li>
			</ul>		
		{% endblock %}
	</div>
	
</div>


<div class="clear"></div>
<div id="footer">
