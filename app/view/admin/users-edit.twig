{% extends "admin/layout.html.twig" %}

{% block content %}

<div class="row-fluid">
    <div class="span9">
	<h1>Edit user <small>"{{ userdata.username }}"</small></h1>
    </div>
    <div class="span3">
	
    </div>
</div>
<div class="row-fluid">
    <div class="span9">
	<ul class="breadcrumb">
	    <li><a href="/admin">Admin</a> <span class="divider">/</span></li>
	    <li><a href="/admin/users">Users</a> <span class="divider">/</span></li>
	    <li class="active">{{ userdata.username }}</li>
	</ul>

	<form class="form-horizontal" action="" method="POST">

	<div class="control-group">
	    <label class="control-label">Username</label>
	    <div class="controls">
		<input type="text" name="username" value="{{ userdata.username }}" placeholder="name_menu">
	    </div>
	</div>
	<div class="control-group">
	    <label class="control-label">Password</label>
	    <div class="controls">
		<input type="password" name="password" value="" placeholder="password"> <input type="password" name="confitm_password" value="" placeholder="confirm_password">
		<span class="help-block">Enter a new password if you want it to change, if this field will be empty password will not change.</span>
	    </div>
	</div>
	<div class="control-group">
	    <label class="control-label">Email</label>
	    <div class="controls">
		<input type="email" name="email" value="{{ userdata.email }}" placeholder="email">
	    </div>
	</div>
	<div class="control-group">
	    <label class="control-label">Group</label>
	    <div class="controls">
		<input type="text" name="group" value="{{ userdata.group }}" placeholder="group">
	    </div>
	</div>
	<div class="control-group">
	    <label class="control-label">Status</label>
	    <div class="controls">
		<input type="text" name="status" value="{{ userdata.status }}" placeholder="status">
	    </div>
	</div>
	<div class="form-actions">
	    <button type="submit" class="btn btn-primary">Save</button>
	    <a class="btn" href="/admin/users">Cancel</a>
	</div>	
	</form>
    </div>
    <div class="span3">
    </div>
</div>
{% endblock %}