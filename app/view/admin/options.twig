{% extends "admin/layout.html.twig" %}

{% block sidebar %}
{% endblock %}


{% block content %}

<div class="row-fluid">
    <div class="span9">
	<h1>Options <small>edit configuration</small></h1>
    </div>
    <div class="span3">
	<a href="#add-form" role="button" class="btn btn-primary btn-large pull-right" data-toggle="modal"><i class="icon-plus-sign"></i> Add new option</a>
    </div>
</div>
	<ul class="breadcrumb">
	    <li><a href="/admin">Admin</a> <span class="divider">/</span></li>
	    <li><a href="/admin/options">Options</a> <span class="divider">/</span></li>
	</ul>

	<form class="form-horizontal submit-only-changed" action="" method="POST">

	{% for name,option in bcms.options.all() %}
	<div class="control-group">
	    <label class="control-label">{{ option.description }}</label>
	    <div class="controls">
		<input type="text" name="{{ name }}" value="{{ option.value }}" placeholder="{{ name }}">
		<a class="muted confirm" href="/admin/options/delete/{{ name }}"><i class="icon-">&#xf014;</i></a>
		<span class="help-block"><small>{{ name }}</small></span>
	    </div>
	</div>
	{% endfor %}

	<div class="form-actions">
	    <button type="submit" class="btn btn-primary">Save</button>
	    <a class="btn" href="/admin/options">Cancel</a>
	</div>	
	</form>
    </div>
     
    <!-- Modal -->
    <div id="add-form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<form action="/admin/options/add" method="POST">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3 id="myModalLabel">Add new option</h3>
	</div>
	<div class="modal-body">
	    <input class="input-block-level" type="text" name="name" placeholder="Name">
	    <input class="input-block-level" type="text" name="value" placeholder="Value">
	    <input class="input-block-level" type="text" name="description" placeholder="Description">
	</div>
	<div class="modal-footer">
	<button type="submit" class="btn btn btn-primary">Save</button>
	<button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
	</div>
	</form>	
    </div>    
	
{% endblock %}